<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_width="386dp"
        android:layout_height="206dp"
        app:cardBackgroundColor="#292B30"
        app:cardCornerRadius="13dp">




        <TextView
            android:id="@+id/discipline"
            android:layout_width="269dp"
            android:layout_height="61dp"
            android:layout_gravity="top"

            android:layout_marginStart="25.5dp"
            android:layout_marginTop="25.5dp"

            android:fontFamily="@font/roboto_medium"
            android:gravity="start|top"
            android:text="Стандартизация и сертификация ПО"
            android:textColor="#FFFFFF"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/teacher"
            android:layout_width="207dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="25.5dp"
            android:layout_marginBottom="25.5dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="bottom|start"
            android:text="Пульмановская Абудабирановичок"
            android:textColor="#8B8D92"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/cabinet"
            android:layout_width="51dp"
            android:layout_height="106dp"
            android:layout_gravity="end"
            android:layout_marginTop="25.5dp"
            android:layout_marginEnd="25.5dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="end|top"
            android:text="420а 418"
            android:textColor="#8B8D92"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/lesson"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="25.5dp"
            android:layout_marginBottom="25.5dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="end|bottom"
            android:text="1"
            android:textColor="#8B8D92"
            android:textSize="23dp" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>